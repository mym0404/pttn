{
  "name": "pttn",
  "version": "1.0.53",
  "description": "Claude Code Pattern Helper - CLI tool for managing code patterns in .claude directory",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "pttn": "./dist/cli.js"
  },
  "scripts": {
    "dev": "tsdown --silent && node dist/cli.js \"$@\"",
    "build": "tsdown",
    "prepack": "pnpm run t && pnpm build",
    "prepublishOnly": "pnpm build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "t": "pnpm lint && pnpm typecheck && pnpm build",
    "release": "yes | npx release-it patch",
    "sync:commands": "zx scripts/sync-commands.mjs"
  },
  "keywords": [
    "claude",
    "code",
    "cli",
    "ai",
    "helper"
  ],
  "author": "MJ <mym0404@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/mym0404/pttn#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mym0404/pttn.git"
  },
  "bugs": {
    "url": "https://github.com/mym0404/pttn/issues"
  },
  "packageManager": "pnpm@10.15.0",
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "catalog:",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.2.0",
    "happy-dom": "^18.0.1",
    "prettier": "^3.6.2",
    "rollup-plugin-copy": "^3.5.0",
    "tsc-alias": "^1.8.16",
    "tsdown": "^0.2.17",
    "typescript": "catalog:",
    "typescript-eslint": "^8.41.0",
    "vitest": "^3.2.4",
    "zx": "^8.8.1"
  },
  "dependencies": {
    "@clack/prompts": "^0.7.0",
    "commander": "^12.1.0",
    "execa": "^9.6.0",
    "front-matter": "^4.0.2",
    "fs-extra": "^11.3.1",
    "glob": "^11.0.0",
    "minimatch": "^10.0.1",
    "natural": "^6.10.0",
    "picocolors": "^1.1.1",
    "workspace-tools": "^0.38.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
